{
  "name": "100-blocks-a-day-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prisma:dev:deploy": "prisma migrate deploy",
    "db:dev:rm": "docker compose rm dev-db -s -f -v",
    "db:dev:up": "docker-compose up -d 100-blocks-dev-db",
    "db:dev:restart": "yarn db:dev:rm && yarn db:dev:up && sleep 1 && yarn prisma:dev:deploy",
    "start": "node bin/www",
    "dev": "nodemon bin/www"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "eslint": "^8.9.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1"
  }
}
