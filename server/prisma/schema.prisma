// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String
  password String
  waketime DateTime

  blocks Block[]
  @@map("users")
}

model Block {
  date       DateTime
  blockindex Int

  userId Int
  user   User @relation(fields: [userId], references: [id])

  Blockdata Blockdata[]
  @@unique([date, blockindex])
  @@map("blocks")
}

model Blockdata {
  id Int @id @default(autoincrement())

  isproductive Boolean @default(false)
  description  String



  blockindex Int
  blockdate  DateTime
  block      Block    @relation(fields: [blockindex, blockdate], references: [blockindex, date])


  @@map("blockdata")
}
