// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String

  blocks Blocks[]
  @@map("users")
}

model Blocks {
  id Int @id @default(autoincrement())

  date        DateTime
  blocks      Int[]
  description String
  image       String

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@map("blocks")
}
